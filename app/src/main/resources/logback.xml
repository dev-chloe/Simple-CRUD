<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanperiod="30 seconds">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level | %d{yyyy.MM.dd HH:mm:ss.SSS} | %logger{36}:%line - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.toyproject.simplecrudapp" level="info"></logger>
    <logger name="com.toyproject.simplecrudapp.interfaces"   level="info"></logger>
    <logger name="com.toyproject.simplecrudapp.applications" level="info"></logger>
    <logger name="com.toyproject.simplecrudapp.domains"      level="info"></logger>

    <root level="info">
        <appender-ref ref="console"/>
    </root>

</configuration>